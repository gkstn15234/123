{
  "name": "wp-to-hugo-migration",
  "version": "1.0.0",
  "description": "WordPress XML to Hugo Markdown migration tool with Cloudflare Images support",
  "main": "src/converter.js",
  "scripts": {
    "migrate": "node src/converter.js",
    "test": "node src/converter.js --test",
    "dry-run": "node src/converter.js --dry-run",
    "upload-images": "node src/converter.js --upload-images",
    "resume": "node --max-old-space-size=4096 src/converter.js --resume",
    "bulk-migrate": "node --max-old-space-size=4096 src/converter.js",
    "bulk-test": "node --max-old-space-size=4096 src/converter.js --test",
    "bulk-upload": "node --max-old-space-size=4096 src/converter.js --upload-images",
    "batch-upload": "node --max-old-space-size=4096 batch-image-upload.js"
  },
  "dependencies": {
    "xml2js": "^0.6.2",
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.6.0",
    "moment": "^2.29.4",
    "slugify": "^1.6.6",
    "fs-extra": "^11.1.1",
    "chalk": "^4.1.2",
    "progress": "^2.0.3",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "wordpress",
    "hugo",
    "migration",
    "cloudflare",
    "images",
    "markdown"
  ],
  "author": "WordPress to Hugo Migration Tool",
  "license": "MIT"
} 